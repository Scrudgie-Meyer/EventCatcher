<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewEvent.Settings"
             Title="Settings"
             BackgroundColor="LightCyan">
    <StackLayout VerticalOptions="StartAndExpand" Margin="20">
        <Button Text="Return" TextColor="White" Clicked="OnReturnClicked" BackgroundColor="#FF05A27F" CornerRadius="8" />
        <Entry x:Name="ChangeNickname" TextColor="White" BackgroundColor="#FF05A27F" FontSize="Large" Margin="0, 30, 0, 0" Placeholder="Change nickname" PlaceholderColor="LightGray"/>

        <Label  Text="Set new password"  TextColor="Black" FontSize="Large" Margin="0, 20, 0, 0" />
        <Entry x:Name="OldPassword" TextColor="White" IsPassword="True" BackgroundColor="#FF05A27F" FontSize="Large" Margin="0, 10, 0, 0" Placeholder="Old password" PlaceholderColor="LightGray"/>
        <Entry x:Name="NewPassword" TextColor="White" IsPassword="True" BackgroundColor="#FF05A27F" FontSize="Large" Margin="0, 30, 0, 0" Placeholder="New password" PlaceholderColor="LightGray"/>
        <Button Text="Save changes" TextColor="White" Clicked="OnSaveClicked" BackgroundColor="#FF05A27F" CornerRadius="8" FontSize="Large" Margin="0, 30, 0, 0" />
    </StackLayout>
</ContentPage>