<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewEvent.JoinEvent"
             Title="JoinEvent"
             BackgroundColor="LightCyan">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="" FontSize="Title" TextColor="Black" />
        <Entry x:Name="Pass" Placeholder="Enter UniqueCode" TextColor="White" PlaceholderColor="LightGray" BackgroundColor="#FF05A27F" FontSize="Large" Margin="0, 10, 0, 0"/>
        <Button Text="Search" TextColor="White" BackgroundColor="#FF05A27F" FontSize="Large" Margin="0, 30, 0, 0" Clicked="OnJoinClicked"/>
    </StackLayout>

</ContentPage>