<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewEvent.Login"
             Title="Login"
             BackgroundColor="LightCyan">

    <StackLayout VerticalOptions="StartAndExpand" Margin="20">
        <Entry x:Name="Email" TextColor="#FFFFFF" BackgroundColor="#FF05A27F" FontSize="Large" Placeholder="Email" PlaceholderColor="LightGray" Margin="0, 30, 0, 0"/>
        <Entry x:Name="Password" TextColor="#FFFFFF" IsPassword="True" BackgroundColor="#FF05A27F" FontSize="Large" Placeholder="Password" PlaceholderColor="LightGray" Margin="0, 30, 0, 0"/>
        <Button Text="Submit" TextColor="#FFFFFF" Clicked="OnSubmitClicked" BackgroundColor="#FF05A27F" CornerRadius="8" FontSize="Large" Margin="0, 30, 0, 0" />
        <Button Text="Register" TextColor="#FFFFFF" Clicked="OnRegisterClicked" VerticalOptions="End" BackgroundColor="#FF05A27F" FontSize="Large" CornerRadius="8" Margin="0, 10, 0, 0"/>
    </StackLayout>
</ContentPage>