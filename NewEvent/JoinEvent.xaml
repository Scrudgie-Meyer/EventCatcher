<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewEvent.JoinEvent"
             Title="JoinEvent"
             BackgroundColor="Black">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <Label Text="Join Event" FontSize="Large" TextColor="White" />
        <Entry x:Name="Pass" Placeholder="Enter UniqueCode" TextColor="White" PlaceholderColor="Gray" BackgroundColor="#FF025C48" FontSize="Large" Margin="0, 10, 0, 0"/>
        <Button Text="Join" TextColor="White" BackgroundColor="#023402" FontSize="Large" Margin="0, 30, 0, 0" Clicked="OnJoinClicked"/>
    </StackLayout>

</ContentPage>