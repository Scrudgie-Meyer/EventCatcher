<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewEvent.Registration"
             Title="Registration"
             BackgroundColor="LightCyan">

    <StackLayout VerticalOptions="StartAndExpand" Margin="20">
        <Button Text="Return" TextColor="White" Clicked="OnReturnClicked" BackgroundColor="#FF05A27F" CornerRadius="8" FontSize="Large"/>
        <Entry x:Name="Email" TextColor="White" BackgroundColor="#FF05A27F" FontSize="Large" Margin="0, 30, 0, 0" Placeholder="Email" PlaceholderColor="LightGray"/>
        <Entry x:Name="Nickname" TextColor="White" BackgroundColor="#FF05A27F" FontSize="Large" Margin="0, 30, 0, 0" Placeholder="Your name" PlaceholderColor="LightGray"/>
        <Entry x:Name="Password" TextColor="White" IsPassword="True" BackgroundColor="#FF05A27F" FontSize="Large" Margin="0, 30, 0, 0" Placeholder="Password" PlaceholderColor="LightGray"/>
        <Entry x:Name="DubPassword" TextColor="White" IsPassword="True" BackgroundColor="#FF05A27F" FontSize="Large" Margin="0, 30, 0, 0" Placeholder="Dublicate password" PlaceholderColor="LightGray"/>
        <Button Text="Submit" TextColor="White" Clicked="OnSubmitClicked" BackgroundColor="#FF05A27F" CornerRadius="8" FontSize="Large" Margin="0, 30, 0, 0" />
    </StackLayout>
</ContentPage>




